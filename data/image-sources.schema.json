{
	"$schema": "https://json-schema.org/draft/2019-09/schema",
	"$id": "image-sources.schema.json",
	"type": "object",
	"additionalProperties": {
		"type": "array",
		"items": {
			"type": "object",
			"required": [
				"src"
			],
			"additionalProperties": false,
			"properties": {
				"src": {
					"type": "string"
				},
				"alt": {
					"type": "string"
				},
				"highlightsMeta": {
					"$ref": "highlights-meta.json#/definitions/highlightsMeta"
				},
				"skip": {
					"type": "boolean"
				}
			}
		}
	}
}
