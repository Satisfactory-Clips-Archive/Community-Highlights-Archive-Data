{
	"$schema": "https://json-schema.org/draft/2019-09/schema",
	"type": "object",
	"default": {},
	"title": "Image Source Schema",
	"additionalProperties": {
		"type": "array",
		"items": {
			"type": "object",
			"required": [
				"src",
				"skip"
			],
			"additionalProperties": false,
			"properties": {
				"src": {
					"type": "string"
				},
				"alt": {
					"type": "string"
				},
				"highlightsMeta": {
					"type": "array",
					"minItems": 1,
					"items": {
						"type": "string",
						"oneOf": [
							{"const": "flying vehicles"},
							{"const": "bridge"},
							{"const": "grass fields arch"},
							{"const": "team mug"},
							{"const": "team nut"},
							{"const": "team xenobasher"},
							{"const": "team zipline"},
							{"const": "weatherwax"}
						]
					}
				},
				"skip": {
					"type": "boolean"
				}
			}
		}
	}
}
